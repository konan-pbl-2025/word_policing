<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".GameWithVote">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="449dp"
        android:layout_height="782dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509"
        app:srcCompat="@drawable/haikei_vellum" />

    <Button
        android:id="@+id/topic1"
        android:layout_width="96dp"
        android:layout_height="52dp"
        android:text="話題1"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="168dp" />

    <Button
        android:id="@+id/topic2"
        android:layout_width="96dp"
        android:layout_height="50dp"
        android:layout_marginTop="168dp"
        android:text="話題2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/topic3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="話題３"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <Button
        android:id="@+id/kill"
        android:layout_width="198dp"
        android:layout_height="127dp"
        android:layout_marginTop="56dp"
        android:text="投票を画面へ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topic2"
        app:layout_constraintVertical_bias="0.505" />

    <TextView
        android:id="@+id/topic"
        android:layout_width="233dp"
        android:layout_height="107dp"
        android:text="話題ボタンを押すと話題が出るよ"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="266dp" />

</androidx.constraintlayout.widget.ConstraintLayout>